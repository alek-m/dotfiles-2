if has('gui_running')
  set guifont=Source\ Code\ Pro\ for\ Powerline:h15,Inconsolata\ XL:h17,Inconsolata:h20,Monaco:h17
else
endif 

if !has("gui_running")
  syntax on
  set background=dark
  let g:solarized_termtrans = 1
  let g:solarized_termcolors=256
  colorscheme solarized
endif

set foldmethod=syntax

" Disable neocomplete
let g:neocomplete#enable_at_startup = 0

" Tell Yankring to put its history file in a neat location
let g:yankring_history_dir = '~/.vim/yankring.history'
